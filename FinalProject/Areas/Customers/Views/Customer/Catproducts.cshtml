@{
    var Cats = (List<FinalProject.Models.Category>)ViewBag.Cats;
    var Cat = (FinalProject.Models.Category)ViewBag.Cat;

}
@model IEnumerable<FinalProject.Models.Item>

       <div class="page-heading products-heading header-text">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="text-content">
              <h4>new arrivals</h4>
              <h2>sixteen products</h2>
            </div>
          </div>
        </div>
      </div>
    </div>

 
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="section-heading">
              <h2>@Cat.Name</h2>
            
            </div>
          </div>
           @foreach(var item in Model)
              {
          <div class="col-md-4">
            <div class="product-item">
                  <a href="~/Customers/Customer/details/@item.ID"><img src="~/images/@item.Photopath" alt="" width="100px" height="150px" ></a>
              <div class="down-content">
                <a href="~/CustomersCustomer/details/@item.ID"><h4>@item.Name</h4></a>
                <h6>$@item.Price</h6>
                <p>@item.Description</p>
                
              </div>
            </div>
          </div>
              }
    
          </div>
        </div>
      </div>

      <div class="latest-products">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="section-heading">
              <h2>Categories</h2>
             
            </div>
          </div>
             <div class="services">
      <div class="container">
        <div class="row">
            @foreach(var item in Cats)
        {  <div class="col-md-4">
            <div class="service-item">
              <div class="icon" width="a">
                <img src="~/images/@item.Photo"  class="rounded-circle" width="200px"/>
              </div>
              <div class="down-content">
                <h4>@item.Name</h4>
                <p>@item.Description</p>
                <a href="~/Customers/Customer/Catproducts/@item.ID" class="filled-button">Show Items</a>
              </div>
            </div>
          </div>
          }
           </div>
      </div>
    </div>
    </div>
    </div>
    

